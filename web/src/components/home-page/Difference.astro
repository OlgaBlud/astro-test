  .difference-list {
    display: flex;
    flex-wrap: wrap;
    column-gap: 8px;
    max-width: 828px;
  }
  .difference-item {
    width: calc((100% - 8px) / 2);
    position: relative;
    padding: 92px 22px 32px;
  }
  .difference-item-icon {
    position: absolute;
    top: 32px;
    left: 0;
    width: 44px;
    height: 44px;
  }
  .difference-item-title {
    margin-bottom: 4px;
    color: var(--navy-2, #19244e);
    font-size: 20px;
    font-weight: 600;
  }
  .difference-item-add-text {
    margin-bottom: 16px;
    color: var(--navy-2, #19244e);
    font-size: 16px;
    font-style: italic;
  }
  .difference-item-text {
    color: var(--navy-70, rgba(35, 47, 72, 0.7));
