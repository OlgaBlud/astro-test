import ListItemIcon from "../../images/icons/difference-item.svg";

import type { DifferenceType } from "../../types/sanity";

interface Props {
  content: DifferenceType;
}

const { title, items } = Astro.props.content;
---

<section>
  <div class="container">
    <div class="section-title-wrap">
      <div class="decor-line"></div>
      <h2 class="section-title">
        {
          title.map((word) =>
            word.highlight ? <span>{word.text}</span> : word.text,
          )
        }
      </h2>
    </div>

    <ul class="difference-list">
      {
        items.map((item) => (
          <li class="difference-item">
            <ListItemIcon class="difference-item-icon" />

            <h3 class="difference-item-title">{item.title}</h3>

            {item.subtitle && (
              <p class="difference-item-add-text">{item.subtitle}</p>
            )}

            <p class="difference-item-text">{item.text}</p>
          </li>
        ))
      }
    </ul>
  </div>
</section>
<style>
  section {
    background-image: url("/src/images/home/difference-bg.avif");
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
  }
  .container {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    gap: 8px;
  }
  .section-title-wrap {
    position: relative;
    padding: 16px 24px;
    width: 388px;
    flex-shrink: 0;
  }
